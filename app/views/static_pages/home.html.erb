<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/entry_form' %>
      </section>
    </aside>
    <div class="span8">
      <h2>The Latest Entry</h2>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <div class="row">
      <aside class="span4">
        <%= image_tag("tieude2.jpg", alt:"blog") %>
      </aside>
      <div class="span6">
        <h1>Welcome to My blog</h1>
        <p>
        <h2>Right here, right now, write away!</h2>
      </p>
        <%= link_to "Sign up and start blogging for free now!", signup_path, class: "btn btn-large btn-primary" %>
        <br>
      </div>
    </div>
  </div>
<% end %>
